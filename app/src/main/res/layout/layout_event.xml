<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:background="@drawable/border_visible">

            <TextView
                android:id="@+id/textViewEventName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight=".70"
                android:layout_centerVertical="true"
                android:layout_margin="7sp"
                android:padding="7sp"
                android:text="Event name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewEvent"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/event" />


                <TextView
                    android:id="@+id/textViewEventDescription"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="7sp"
                    android:text="Description"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewEventDate"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_margin="7sp"
                    android:padding="7sp"
                    android:text="Date"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:padding="4dp">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/layoutEventBtnEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        app:rippleColor="@color/white"
                        app:backgroundTint="@color/edit"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:contentDescription="Edition"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/layoutEventBtnTrash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        app:rippleColor="@color/white"
                        app:backgroundTint="@color/trash"
                        android:outlineAmbientShadowColor="@color/black"
                        android:src="@drawable/ic_baseline_delete_24"
                        android:contentDescription="Trash"
                        />
                    </LinearLayout>
                </LinearLayout>




            </LinearLayout>



        </LinearLayout>
</LinearLayout>